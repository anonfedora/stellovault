generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  stellarAddress String    @unique
  name           String?
  role           Role      @default(USER)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  loans          Loan[]    @relation("BorrowerLoans")
  lentLoans      Loan[]    @relation("LenderLoans")
  wallets        Wallet[]
  challenges     WalletChallenge[]
  loans          Loan[]
  investments    Investment[]
}

model Wallet {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  address    String   @unique
  isPrimary  Boolean  @default(false)
  label      String?
  verifiedAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
}

model WalletChallenge {
  id            String           @id @default(uuid())
  userId        String?
  user          User?            @relation(fields: [userId], references: [id], onDelete: Cascade)
  walletAddress String
  nonce         String
  purpose       ChallengePurpose
  expiresAt     DateTime
  usedAt        DateTime?
  createdAt     DateTime         @default(now())

  @@unique([walletAddress, nonce, purpose])
  @@index([walletAddress, purpose])
  @@index([userId, purpose])
}

model Loan {
  id             String    @id @default(uuid())
  borrowerId     String
  borrower       User      @relation("BorrowerLoans", fields: [borrowerId], references: [id])
  lenderId       String?
  lender         User?     @relation("LenderLoans", fields: [lenderId], references: [id])
  amount         Decimal
  assetCode      String    @default("USDC")
  status         LoanStatus @default(PENDING)
  collateralAmt  Decimal
  escrowAddress  String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  repayments     Repayment[]

  @@index([borrowerId])
  @@index([lenderId])
  @@index([status])
}

model Investment {
  id             String    @id @default(uuid())
  investorId     String
  investor       User      @relation(fields: [investorId], references: [id])
  amount         Decimal
  createdAt      DateTime  @default(now())
}

model Repayment {
  id             String    @id @default(uuid())
  loanId         String
  loan           Loan      @relation(fields: [loanId], references: [id], onDelete: Cascade)
  amount         Decimal
  paidAt         DateTime  @default(now())
  createdAt      DateTime  @default(now())

  @@index([loanId])
}

enum Role {
  USER
  MERCHANT
  ADMIN
}

enum LoanStatus {
  PENDING
  ACTIVE
  REPAID
  DEFAULTED
}

enum ChallengePurpose {
  LOGIN
  LINK_WALLET
}
