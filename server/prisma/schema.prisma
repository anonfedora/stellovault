generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─────────────────────────────────────────────
// User & Auth
// ─────────────────────────────────────────────

model User {
  id                  String                @id @default(uuid())
  stellarAddress      String                @unique
  name                String?
  role                Role                  @default(USER)
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  
  wallets             Wallet[]
  challenges          WalletChallenge[]
  boughtEscrows       Escrow[]              @relation("BuyerEscrows")
  soldEscrows         Escrow[]              @relation("SellerEscrows")
  investments         Investment[]
  sessions            Session[]
  borrowedLoans       Loan[]                @relation("BorrowerLoans")
  lentLoans           Loan[]                @relation("LenderLoans")
  governanceProposals GovernanceProposal[]  @relation("ProposerProposals")
}

model Wallet {
  id         String    @id @default(uuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  address    String    @unique
  isPrimary  Boolean   @default(false)
  label      String?
  verifiedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([userId])
}

model WalletChallenge {
  id            String           @id @default(uuid())
  userId        String?
  user          User?            @relation(fields: [userId], references: [id], onDelete: Cascade)
  walletAddress String
  nonce         String
  purpose       ChallengePurpose
  expiresAt     DateTime
  usedAt        DateTime?
  createdAt     DateTime         @default(now())

  @@unique([walletAddress, nonce, purpose])
  @@index([walletAddress, purpose])
  @@index([userId, purpose])
}

model Session {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  jti       String    @unique
  revokedAt DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
}

// ─────────────────────────────────────────────
// Escrow & Collateral
// ─────────────────────────────────────────────

model Escrow {
  id            String       @id @default(uuid())
  buyerId       String
  buyer         User         @relation("BuyerEscrows", fields: [buyerId], references: [id])
  sellerId      String
  seller        User         @relation("SellerEscrows", fields: [sellerId], references: [id])
  amount        Decimal      @db.Decimal(20, 7)
  assetCode     String       @default("USDC")
  status        EscrowStatus @default(PENDING)
  stellarTxHash String?
  escrowAddress String?
  expiresAt     DateTime
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  collaterals     Collateral[]
  oracleEvents    OracleEvent[]
  confirmations   OracleConfirmation[]
  disputes        Dispute[]

  @@index([buyerId])
  @@index([sellerId])
  @@index([status])
  @@index([expiresAt])
}

model Collateral {
  id           String           @id @default(uuid())
  escrowId     String
  escrow       Escrow           @relation(fields: [escrowId], references: [id], onDelete: Cascade)
  assetCode    String
  amount       Decimal          @db.Decimal(20, 7)
  metadataHash String?
  status       CollateralStatus @default(LOCKED)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  loans Loan[]

  @@index([escrowId])
  @@index([metadataHash])
}

// ─────────────────────────────────────────────
// Loan & Repayment
// ─────────────────────────────────────────────

model Loan {
  id           String     @id @default(uuid())
  borrowerId   String
  borrower     User       @relation("BorrowerLoans", fields: [borrowerId], references: [id])
  lenderId     String?
  lender       User?      @relation("LenderLoans", fields: [lenderId], references: [id])
  amount       Decimal    @db.Decimal(20, 7)
  assetCode    String     @default("USDC")
  interestRate Decimal    @db.Decimal(5, 4)
  status       LoanStatus @default(PENDING)
  dueDate      DateTime?
  collateralId String?
  collateral   Collateral? @relation(fields: [collateralId], references: [id])
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  repayments Repayment[]

  @@index([borrowerId])
  @@index([lenderId])
  @@index([status])
  @@index([collateralId])
}

model Repayment {
  id        String   @id @default(uuid())
  loanId    String
  loan      Loan     @relation(fields: [loanId], references: [id], onDelete: Cascade)
  amount    Decimal  @db.Decimal(20, 7)
  paidAt    DateTime @default(now())
  createdAt DateTime @default(now())

  @@index([loanId])
}

model Investment {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount    Decimal  @db.Decimal(20, 7)
  assetCode String   @default("USDC")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// ─────────────────────────────────────────────
// Oracle
// ─────────────────────────────────────────────

model OracleEvent {
  id               String   @id @default(uuid())
  escrowId         String
  escrow           Escrow   @relation(fields: [escrowId], references: [id], onDelete: Cascade)
  oracleAddress    String
  confirmationType String
  signature        String
  confirmedAt      DateTime @default(now())

  @@index([escrowId])
  @@index([oracleAddress])
}

model Oracle {
  id            String              @id @default(uuid())
  address       String              @unique
  isActive      Boolean             @default(true)
  registeredAt  DateTime            @default(now())
  deactivatedAt DateTime?
  updatedAt     DateTime            @updatedAt
  confirmations OracleConfirmation[]

  @@index([isActive])
}

model OracleConfirmation {
  id        String   @id @default(uuid())
  oracleId  String
  oracle    Oracle   @relation(fields: [oracleId], references: [id], onDelete: Cascade)
  escrowId  String
  escrow    Escrow   @relation(fields: [escrowId], references: [id], onDelete: Cascade)
  eventType String
  signature String
  payload   Json
  createdAt DateTime @default(now())

  @@unique([oracleId, escrowId, eventType])
  @@index([escrowId])
  @@index([oracleId])
}

model Dispute {
  id              String       @id @default(uuid())
  escrowId        String
  escrow          Escrow       @relation(fields: [escrowId], references: [id], onDelete: Cascade)
  reporterAddress String
  reason          String
  status          DisputeStatus @default(OPEN)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([escrowId])
  @@index([status])
}

// ─────────────────────────────────────────────
// Governance
// ─────────────────────────────────────────────

model GovernanceProposal {
  id          String           @id @default(uuid())
  title       String
  description String
  proposerId  String
  proposer    User             @relation("ProposerProposals", fields: [proposerId], references: [id])
  status      GovernanceStatus @default(OPEN)
  endsAt      DateTime
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  votes GovernanceVote[]

  @@index([proposerId])
  @@index([status])
}

model GovernanceVote {
  id           String             @id @default(uuid())
  proposalId   String
  proposal     GovernanceProposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  voterAddress String
  vote         String
  weight       Decimal            @db.Decimal(20, 7)
  createdAt    DateTime           @default(now())

  @@unique([proposalId, voterAddress])
  @@index([proposalId])
}

model GovernanceAuditLog {
  id         String    @id @default(uuid())
  eventType  String
  proposalId String?
  voterId    String?
  details    String?
  txHash     String?
  createdAt  DateTime  @default(now())

  @@index([eventType])
  @@index([createdAt])
}

// ─────────────────────────────────────────────
// Risk Scoring
// ─────────────────────────────────────────────

model RiskScore {
  id            String   @id @default(uuid())
  walletAddress String
  score         Int
  grade         String
  components    Json
  computedAt    DateTime @default(now())

  @@index([walletAddress, computedAt])
}

// ─────────────────────────────────────────────
// Enums
// ─────────────────────────────────────────────

enum Role {
  USER
  MERCHANT
  ADMIN
}

enum ChallengePurpose {
  LOGIN
  LINK_WALLET
}

enum EscrowStatus {
  PENDING
  FUNDED
  RELEASED
  REFUNDED
  DISPUTED
  CANCELLED
}

enum CollateralStatus {
  LOCKED
  RELEASED
  LIQUIDATED
}

enum LoanStatus {
  PENDING
  ACTIVE
  REPAID
  DEFAULTED
}

enum GovernanceStatus {
  OPEN
  PASSED
  REJECTED
  EXECUTED
}

enum DisputeStatus {
  OPEN
  RESOLVED
  CANCELLED
}
