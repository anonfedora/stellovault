generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  stellarAddress String    @unique
  name           String?
  role           Role      @default(USER)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  loans          Loan[]    @relation("BorrowerLoans")
  lentLoans      Loan[]    @relation("LenderLoans")
  investments    Investment[]
}

model Loan {
  id             String    @id @default(uuid())
  borrowerId     String
  borrower       User      @relation("BorrowerLoans", fields: [borrowerId], references: [id])
  lenderId       String?
  lender         User?     @relation("LenderLoans", fields: [lenderId], references: [id])
  amount         Decimal
  assetCode      String    @default("USDC")
  status         LoanStatus @default(PENDING)
  collateralAmt  Decimal
  escrowAddress  String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  repayments     Repayment[]

  @@index([borrowerId])
  @@index([lenderId])
  @@index([status])
}

model Investment {
  id             String    @id @default(uuid())
  investorId     String
  investor       User      @relation(fields: [investorId], references: [id])
  amount         Decimal
  createdAt      DateTime  @default(now())
}

model Repayment {
  id             String    @id @default(uuid())
  loanId         String
  loan           Loan      @relation(fields: [loanId], references: [id], onDelete: Cascade)
  amount         Decimal
  paidAt         DateTime  @default(now())
  createdAt      DateTime  @default(now())

  @@index([loanId])
}

enum Role {
  USER
  MERCHANT
  ADMIN
}

enum LoanStatus {
  PENDING
  ACTIVE
  REPAID
  DEFAULTED
}
