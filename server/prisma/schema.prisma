// ─────────────────────────────────────────────
// Loan & Repayment
// ─────────────────────────────────────────────

model Loan {
  id           String     @id @default(uuid())
  borrowerId   String
  borrower     User       @relation("BorrowerLoans", fields: [borrowerId], references: [id])
  lenderId     String?
  lender       User?      @relation("LenderLoans", fields: [lenderId], references: [id])
  amount       Decimal    @db.Decimal(20, 7)
  assetCode    String     @default("USDC")
  interestRate Decimal    @db.Decimal(5, 4)   // e.g. 0.0500 = 5%
  status       LoanStatus @default(PENDING)
  dueDate      DateTime?
  collateralId String?
  collateral   Collateral? @relation(fields: [collateralId], references: [id])
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  repayments Repayment[]

  @@index([borrowerId])
  @@index([lenderId])
  @@index([status])
  @@index([collateralId])
}

model Repayment {
  id        String   @id @default(uuid())
  loanId    String
  loan      Loan     @relation(fields: [loanId], references: [id], onDelete: Cascade)
  amount    Decimal  @db.Decimal(20, 7)
  paidAt    DateTime @default(now())
  createdAt DateTime @default(now())

  @@index([loanId])
}

// ─────────────────────────────────────────────
// Oracle
// ─────────────────────────────────────────────

model OracleEvent {
  id               String   @id @default(uuid())
  escrowId         String
  escrow           Escrow   @relation(fields: [escrowId], references: [id], onDelete: Cascade)
  oracleAddress    String
  confirmationType String
  signature        String
  confirmedAt      DateTime @default(now())

  @@index([escrowId])
  @@index([oracleAddress])
}

// ─────────────────────────────────────────────
// Governance
// ─────────────────────────────────────────────

model GovernanceProposal {
  id          String           @id @default(uuid())
  title       String
  description String
  proposerId  String
  proposer    User             @relation("ProposerProposals", fields: [proposerId], references: [id])
  status      GovernanceStatus @default(OPEN)
  endsAt      DateTime
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  votes GovernanceVote[]

  @@index([proposerId])
  @@index([status])
}

model GovernanceVote {
  id         String             @id @default(uuid())
  proposalId String
  proposal   GovernanceProposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  voterAddress String
  vote       String             // e.g. "YES" | "NO" | "ABSTAIN"
  weight     Decimal            @db.Decimal(20, 7)
  createdAt  DateTime           @default(now())

  @@unique([proposalId, voterAddress])
  @@index([proposalId])
}

