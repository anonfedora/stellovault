generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String?
  role      Role     @default(USER)
  wallets   Wallet[]
  loans     Loan[]
  investments Investment[]
  sessions  Session[]
  challenges Challenge[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Wallet {
  id             String   @id @default(uuid())
  userId         String
  stellarAddress String
  isPrimary      Boolean  @default(false)
  label          String?  // "Ledger", "Freighter", etc.

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  status WalletStatus @default(ACTIVE)

  sessions       Session[]
  challenges     Challenge[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([stellarAddress])
  @@index([userId])
}



model Loan {
  id             String    @id @default(uuid())
  borrowerId     String
  borrower       User      @relation(fields: [borrowerId], references: [id])
  amount         Decimal
  assetCode      String    @default("USDC")
  status         LoanStatus @default(PENDING)
  collateralAmt  Decimal
  escrowAddress  String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Investment {
  id             String    @id @default(uuid())
  investorId     String
  investor       User      @relation(fields: [investorId], references: [id])
  amount         Decimal
  createdAt      DateTime  @default(now())
}

model Challenge {
  id        String   @id @default(uuid())
  userId    String
  walletId  String
  nonce     String
  expiresAt DateTime
  consumed  Boolean  @default(false)

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  wallet    Wallet   @relation(fields: [walletId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([walletId])
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  walletId  String
  jti       String   @unique

  ipAddress String?
  userAgent String?
  revoked   Boolean  @default(false)
  revokedAt DateTime?
  expiresAt DateTime

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  wallet    Wallet   @relation(fields: [walletId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([walletId])
}

enum WalletStatus {
  ACTIVE
  UNLINKED
  SUSPENDED
}

 
enum Role {
  USER
  MERCHANT
  ADMIN
}

enum LoanStatus {
  PENDING
  ACTIVE
  REPAID
  DEFAULTED
}

enum ChallengePurpose {
  LOGIN
  LINK_WALLET
}
