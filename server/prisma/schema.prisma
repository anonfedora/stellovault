generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  stellarAddress String    @unique
  name           String?
  role           Role      @default(USER)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  wallets        Wallet[]
  challenges     WalletChallenge[]
  loans          Loan[]
  investments    Investment[]
}

model Wallet {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  address    String   @unique
  isPrimary  Boolean  @default(false)
  label      String?
  verifiedAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
}

model WalletChallenge {
  id            String           @id @default(uuid())
  userId        String?
  user          User?            @relation(fields: [userId], references: [id], onDelete: Cascade)
  walletAddress String
  nonce         String
  purpose       ChallengePurpose
  expiresAt     DateTime
  usedAt        DateTime?
  createdAt     DateTime         @default(now())

  @@unique([walletAddress, nonce, purpose])
  @@index([walletAddress, purpose])
  @@index([userId, purpose])
}

model Loan {
  id             String    @id @default(uuid())
  borrowerId     String
  borrower       User      @relation(fields: [borrowerId], references: [id])
  amount         Decimal
  assetCode      String    @default("USDC")
  status         LoanStatus @default(PENDING)
  collateralAmt  Decimal
  escrowAddress  String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Investment {
  id             String    @id @default(uuid())
  investorId     String
  investor       User      @relation(fields: [investorId], references: [id])
  amount         Decimal
  createdAt      DateTime  @default(now())
}

enum Role {
  USER
  MERCHANT
  ADMIN
}

enum LoanStatus {
  PENDING
  ACTIVE
  REPAID
  DEFAULTED
}

enum EscrowStatus {
  PENDING
  FUNDED
  RELEASED
  REFUNDED
  DISPUTED
  CANCELLED
}

enum ChallengePurpose {
  LOGIN
  LINK_WALLET
}

model Oracle {
  id           String   @id @default(uuid())
  address      String   @unique
  isActive     Boolean  @default(true)
  registeredAt DateTime @default(now())
  deactivatedAt DateTime?
  updatedAt    DateTime @updatedAt
  confirmations OracleConfirmation[]

  @@index([isActive])
}

model OracleConfirmation {
  id           String   @id @default(uuid())
  oracleId     String
  oracle       Oracle   @relation(fields: [oracleId], references: [id], onDelete: Cascade)
  escrowId     String
  escrow       Escrow   @relation(fields: [escrowId], references: [id], onDelete: Cascade)
  eventType    String
  signature    String
  payload      Json
  createdAt    DateTime @default(now())

  @@unique([oracleId, escrowId, eventType])
  @@index([escrowId])
  @@index([oracleId])
}

model Escrow {
  id           String   @id @default(uuid())
  buyerId      String?
  sellerId     String?
  amount       Decimal
  assetCode    String   @default("USDC")
  status       EscrowStatus @default(PENDING)
  escrowAddress String?
  expiresAt    DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  confirmations OracleConfirmation[]
  disputes     Dispute[]

  @@index([status])
}

model Dispute {
  id              String   @id @default(uuid())
  escrowId        String
  escrow          Escrow   @relation(fields: [escrowId], references: [id], onDelete: Cascade)
  reporterAddress String
  reason          String
  status          DisputeStatus @default(OPEN)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([escrowId])
  @@index([status])
}

enum DisputeStatus {
  OPEN
  RESOLVED
  CANCELLED
}
