# Server Configuration
PORT=3001

# Database (if using PostgreSQL for aggregation/disputes)
DATABASE_URL=postgres://user:password@localhost:5432/stellovault

# Rate Limiting
# I reject data older than this many seconds (default: 300 = 5 minutes)
RATE_LIMIT_WINDOW_SECONDS=300

# Soroban RPC Configuration
# I use this endpoint to check network health and submit transactions
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org

# Oracle Signing Key
# I use this to sign outgoing transactions
# Format: 64-character hex string (32 bytes)
ORACLE_SECRET_KEY=your_64_char_hex_secret_key_here

# Target Smart Contract
# I submit oracle confirmations to this contract address
# Format: Stellar Contract ID (C... format) or 64-char hex
CONTRACT_ID=your_contract_id_here
# Database Configuration
DATABASE_URL=postgresql://localhost/stellovault

# Stellar Network Configuration
HORIZON_URL=https://horizon-testnet.stellar.org
NETWORK_PASSPHRASE=Test SDF Network ; September 2015
CONTRACT_ID=YOUR_CONTRACT_ID_HERE

# Server Configuration
PORT=3001
RUST_LOG=info

# Test Database (for running tests)
TEST_DATABASE_URL=postgresql://localhost/stellovault_test
